location ~ ^/szen.*\.js$ {
    error_log       /var/log/nginx/szen.pac-error.log;

    gzip            off;

    fastcgi_pass    unix:/var/run/php5-fpm.socket;
    include         fastcgi_params;
    fastcgi_param   SCRIPT_FILENAME $document_root/szen.pac/libexec/szen.pac.php;
}

